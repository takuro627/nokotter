.wrapper
  .side
    = render "side"
  .main
    = form_with(model: @tweet, local: true) do |form|
      %h3
        編集する
      = form.label :image, class: 'form__mask__image' do
        = icon('fas', 'image', class: 'icon')
        = form.file_field :image, class: 'hidden'
      = form.text_area :text, placeholder: "text" , rows: "10"
      = form.submit "SEND"
