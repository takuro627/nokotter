.side
  - if user_signed_in?
    .user_nav.grid-6
      = link_to "/users/#{current_user.id}" do
        = icon('fas', 'home', class:"icon")
      = link_to destroy_user_session_path, method: :delete do
        = icon('fas', 'sign-out-alt', class:"icon")       
      = link_to "/tweets/new", class: "post" do
        =icon('fas', 'pen', class:"icon")
  - else
    .grid-6
      = link_to new_user_session_path, class: 'post' do
        = icon('fas', 'sign-in-alt', class:"icon")
      = link_to new_user_registration_path, class: 'post' do
        = icon('fas', 'user-edit', class:"icon")
      
